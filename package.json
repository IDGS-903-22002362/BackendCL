{
  "name": "club-leon-backend",
  "version": "1.0.0",
  "description": "Backend API para la tienda oficial del Club León - Node.js + TypeScript + Firebase",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "start:prod": "cross-env NODE_ENV=production node dist/server.js",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "watch": "tsc --watch",
    "seed": "ts-node-dev src/scripts/seed.ts",
    "diagnostico": "ts-node-dev src/scripts/diagnostico.ts"
  },
  "keywords": [
    "club-leon",
    "tienda",
    "ecommerce",
    "nodejs",
    "typescript",
    "firebase",
    "firestore",
    "express"
  ],
  "author": "Club León",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
    "@types/multer": "^2.0.0",
    "@types/uuid": "^10.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "firebase-admin": "^13.6.0",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/helmet": "^0.0.48",
    "@types/morgan": "^1.9.9",
    "@types/node": "^24.10.1",
    "@types/node-fetch": "^2.6.13",
    "cross-env": "^7.0.3",
    "form-data": "^4.0.5",
    "rimraf": "^5.0.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
